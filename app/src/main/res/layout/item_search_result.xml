<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/black"    android:padding="8dp">    <ImageView        android:id="@+id/iv_book_cover"        android:layout_width="80dp"        android:layout_height="120dp"        android:layout_marginEnd="8dp"        android:contentDescription="Book Cover"        tools:src="@drawable/im_bk_3"        tools:ignore="MissingConstraints" />    <TextView        android:id="@+id/tv_book_title"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginBottom="4dp"        android:text="Аудиокинга"        android:layout_marginStart="10dp"        android:textColor="@color/white"        android:textSize="18sp"        android:textStyle="bold"        app:layout_constraintBottom_toTopOf="@id/tv_book_author"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toEndOf="@id/iv_book_cover"        app:layout_constraintTop_toTopOf="@id/iv_book_cover" />    <TextView        android:id="@+id/tv_book_author"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginBottom="4dp"        android:layout_marginStart="10dp"        android:text="London"        android:textColor="@color/white"        android:textSize="14sp"        app:layout_constraintBottom_toTopOf="@id/tv_book_description"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toEndOf="@id/iv_book_cover"        app:layout_constraintTop_toBottomOf="@id/tv_book_title" />    <TextView        android:id="@+id/tv_book_description"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginStart="10dp"        android:text="Приключения Макса и собаки Лея"        android:textColor="@color/white"        android:textSize="14sp"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toEndOf="@id/iv_book_cover"        app:layout_constraintTop_toBottomOf="@id/tv_book_author" /></androidx.constraintlayout.widget.ConstraintLayout>